<Window x:Class="CardGameUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGameUI"
        mc:Ignorable="d"
        Title="Card Game UI" Height="450" Width="800">
    <Grid Background="#FF26B79C">
        
        
        <Button x:Name="btnRestart" Content="Play Game" HorizontalAlignment="Left" Margin="400,359,0,0" VerticalAlignment="Top" Height="42" Width="100" Click="btnRestart_Click"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Width="400" Height="303" VerticalAlignment="Top" Margin="200,17,200,0">
            <TextBlock x:Name="txtBkOutput" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>